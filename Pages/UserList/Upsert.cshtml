@page
@model             UsersApp.Pages.UserList.UpsertModel



<br />
<h2 class="text-info">@(Model.User.Id!=0? "Edit":"Create") User</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.User.Id != 0)
        {
            <input type="hidden" asp-for="User.Id" />
        }

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Name" class="form-control" />
            </div>
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Surname"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Surname" class="form-control" />
            </div>
            <span asp-validation-for="User.Surname" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Login"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Login" class="form-control" />
            </div>
            <span asp-validation-for="User.Login" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.DateOfBirth"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.DateOfBirth" class="form-control" />
            </div>
            <span asp-validation-for="User.DateOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn btn-primary from-control">@(Model.User.Id!=0? "Update":"Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}