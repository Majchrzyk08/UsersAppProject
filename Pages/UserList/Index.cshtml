@page
@model UsersApp.Pages.UserList.IndexModel



<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">User List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New User</a>
    </div>
    <div class="col-3">
        <a asp-page="Upsert" class="btn btn-info form-control text-white">Add(Upsert) New User</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Users.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Users.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Users.FirstOrDefault().Surname"></label>
                        </th>
                        <th>
                            <label asp-for="Users.FirstOrDefault().DateOfBirth"></label>
                        </th>
                        <th>
                            <label asp-for="Users.FirstOrDefault().Login"></label>
                        </th>

                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Users)
                    {

                        <tr id="@item.Id">
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.DateOfBirth)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Login)
                            </td>

                            <td>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>

                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No users available.</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Date of birth</th>
                    <th>Login</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/userList.js"></script>
}




 